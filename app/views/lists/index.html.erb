<div class="p-2 px-5 mb-2 bg-light border-bottom">
  <div class= "d-flex align-items-center justify-content-between">
    <%= link_to "My Watch Lists", lists_path, class:"btn btn-lg"%>
    <%= link_to "Create New List", new_list_path, class:"btn btn-outline-primary"%>
  </div>
</div>
<div class="container pt-4">
<div class = "d-flex flex-wrap">
  <% @lists.each do|list| %>
    <div class="card m-3 shadow" style="width: 18rem;">
      <%= link_to "#{list.name}", list_path(list), class:"link-primary text-decoration-none px-2",
      class:"link-danger text-decoration-none px-2"%>
    </div>
  <% end %>
</div>
</div>
